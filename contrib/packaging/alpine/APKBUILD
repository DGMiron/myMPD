pkgname=mympd
pkgver=10.1.0
pkgrel=0
pkgdesc="myMPD is a standalone and mobile friendly web-based MPD client."
url="https://jcorporation.github.io/myMPD/"
arch="all"
license="GPL-3.0-or-later"
depends="libid3tag flac openssl lua5.4 pcre2"
makedepends="cmake perl gzip jq libid3tag-dev flac-dev openssl-dev linux-headers lua5.4-dev pcre2-dev"
install="$pkgname.pre-install $pkgname.post-install"
subpackages="$pkgname-dbg"
source="mympd_$pkgver.orig.tar.gz"
builddir="$srcdir"
options="!check"
#no test suite

build() {
	cd "$builddir" || exit 1
	install -d release
	cd release || exit 1
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=Release -DMYMPD_MANPAGES=OFF -DMYMPD_STRIP_BINARY=OFF ..
	make
}

package() {
	cd "$builddir/release" || exit 1
	make DESTDIR="$pkgdir" install
}
